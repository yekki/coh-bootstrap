<?xml version="1.0"?>
<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config http://xmlns.oracle.com/coherence/coherence-cache-config/1.3/coherence-cache-config.xsd">

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>break-me</cache-name>
            <scheme-name>forced-to-fail-via-Failing-Trigger</scheme-name>
        </cache-mapping>

        <cache-mapping>
            <cache-name>regular*</cache-name>
            <scheme-name>simple</scheme-name>
        </cache-mapping>

        <cache-mapping>
            <cache-name>*</cache-name>
            <scheme-name>simple</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <!-- distributed cache scheme -->
        <distributed-scheme>
            <scheme-name>forced-to-fail-via-Failing-Trigger</scheme-name>
            <service-name>unlimited-partitioned</service-name>
            <serializer>
                <instance>
                    <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
                    <init-params>
                        <init-param>
                            <param-type>string</param-type>
                            <param-value>config/my-pof-config.xml</param-value>
                        </init-param>
                    </init-params>
                </instance>
            </serializer>
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>
            <listener>
                <class-scheme>
                    <!--ClassScheme:instance-->
                    <class-factory-name>com.benstopford.coherence.bootstrap.structures.tools.TriggerFactory</class-factory-name>
                    <method-name>createTriggerListener</method-name>
                    <init-params>
                        <init-param>
                            <param-type>string</param-type>
                            <param-value>{cache-name}</param-value>
                        </init-param>
                    </init-params>
                </class-scheme>
            </listener>
            <autostart>true</autostart>
        </distributed-scheme>

        <distributed-scheme>
            <scheme-name>simple</scheme-name>
            <service-name>unlimited-partitioned</service-name>
            <serializer>
                <instance>
                    <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
                    <init-params>
                        <init-param>
                            <param-type>string</param-type>
                            <param-value>config/my-pof-config.xml</param-value>
                        </init-param>
                    </init-params>
                </instance>
            </serializer>
            <backing-map-scheme>
                <local-scheme />
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>

        <invocation-scheme>
            <service-name>IndexSizer</service-name>
            <serializer>
                <instance>
                    <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
                    <init-params>
                        <init-param>
                            <param-type>string</param-type>
                            <param-value>config/my-pof-config.xml</param-value>
                        </init-param>
                    </init-params>
                </instance>
            </serializer>
            <autostart>true</autostart>

        </invocation-scheme>

        <invocation-scheme>
            <service-name>MyInvocationService1</service-name>
            <serializer>
                <instance>
                    <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
                    <init-params>
                        <init-param>
                            <param-type>string</param-type>
                            <param-value>config/my-pof-config.xml</param-value>
                        </init-param>
                    </init-params>
                </instance>
            </serializer>
            <thread-count>10</thread-count>
            <autostart>true</autostart>
        </invocation-scheme>
    </caching-schemes>
</cache-config>
